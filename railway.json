{
    "build": {
      "nixpacks": {
        "plan": {
          "phases": {
            "setup": {
              "nixpkgs": ["python311", "nodejs_20"]
            },
            "install": {
              "cmds": [
                "pip install -r NewFitnessPoint/requirements.txt",
                "cd NewFitnessPoint/GMS_FRONTEND && npm install && npm run build"
              ]
            },
            "build": {
              "cmds": [
                "cd NewFitnessPoint && python manage.py collectstatic --noinput"
              ]
            }
          }
        }
      }
    },
    "start": "cd NewFitnessPoint && gunicorn NewFitnessPoint.wsgi:application --bind 0.0.0.0:$PORT",
    "static": {
      "path": "NewFitnessPoint/GMS_FRONTEND/dist",
      "serve": true
    }
  }
  